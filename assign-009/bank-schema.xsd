<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
						xmlns:xml="http://www.w3.org/XML/1998/namespace" >
						<!-- not sure about namespaces
						xmlns:c="http://acme-bank.com/bank/checking"
						xmlns:s="http://acme-bank.com/bank/savings" -->
	<!-- Used substitutionGroup to represent the two kinds of accounts -->
  <xsd:element name="account"/>
	<xsd:element name="savings_account" substitutionGroup="account">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="balance">
					<xsd:simpleType>
						<xsd:restriction base="xsd:integer">
							<xsd:minInclusive value="-5000"/>
						</xsd:restriction>
					</xsd:simpleType>
				</xsd:element>
			</xsd:sequence>
			<xsd:attribute name="id" type="xsd:string" use="required"/>
			<xsd:attribute name="interest" type="xsd:decimal" use="required"/>
		</xsd:complexType>
	</xsd:element>
	<xsd:element name="checking_account" substitutionGroup="account">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="balance">
					<xsd:simpleType>
						<xsd:restriction base="xsd:integer">
							<xsd:minInclusive value="-5000"/>
						</xsd:restriction>
					</xsd:simpleType>
				</xsd:element>
			</xsd:sequence>
			<xsd:attribute name="id" type="xsd:string" use="required"/>
		</xsd:complexType>
	</xsd:element>

  <xsd:element name="bank">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="accounts" minOccurs="1" maxOccurs="1">
					<xsd:complexType>
						<xsd:sequence>
							<!-- Reference to the account group defined before -->
							<xsd:element ref="account" maxOccurs="unbounded"/>
						</xsd:sequence>
					</xsd:complexType>
					<!-- I'm not sure how to deal with keys and substitutionGroup -->
					<xsd:key name="idKey">
						<xsd:selector xpath="./bank/accounts/savings_accounts/savings_account|./bank/accounts/checking_accounts/checking_account"/>
						<xsd:field xpath="@id"/>
					</xsd:key>
					<xsd:keyref name="foreignKey" refer="idKey">
						<xsd:selector xpath="./bank/customer_accounts"/>
						<xsd:field xpath="@ac_id"/>
					</xsd:keyref>
				</xsd:element>
				<xsd:element name="customers" minOccurs="1" maxOccurs="1">
					<xsd:complexType>
						<xsd:sequence>
							<xsd:element name="customer" minOccurs="1" maxOccurs="unbounded">
								<xsd:complexType>
									<xsd:sequence>
										<xsd:element name="name" type="xsd:string"/>
										<xsd:element name="address" type="xsd:string" />
									</xsd:sequence>
									<xsd:attribute name="id" type="xsd:ID" use="required" />
								</xsd:complexType>
							</xsd:element>
						</xsd:sequence>
					</xsd:complexType>
				</xsd:element>
				<xsd:element name="customer_accounts" minOccurs="1" maxOccurs="1">
					<xsd:complexType>
						<xsd:sequence>
							<xsd:element name="customer_account" minOccurs="1" maxOccurs="unbounded">
								<xsd:complexType>
									<xsd:attribute name="c_id" type="xsd:IDREF" use="required" />
									<xsd:attribute name="ac_id" use="required" />
								</xsd:complexType>
							</xsd:element>
						</xsd:sequence>
					</xsd:complexType>
					<!--  key and keyref and change the ID IDREF by it to make it easier for next assignments -->
					<xsd:unique name="ac_unique">
						<xsd:selector xpath="customer_account"/>
						<xsd:field xpath="@ac_id"/>
					</xsd:unique>
				</xsd:element>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
</xsd:schema>
